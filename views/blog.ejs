<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title><%= blog.title %></title>
</head>
<body>
    <%- include('./partials/nav') %>

    <div class="container mt-4">
        <h1 class="text-center"><%= blog.title %></h1>

        <div class="d-flex justify-content-center align-items-center my-3">
            <div class="d-flex align-items-center">
                <img src="<%= blog.createdBy.ProfileImageURL %>" width="50px" height="50px" class="rounded-circle" alt="<%= blog.createdBy.fullName %>'s profile picture">
                <a href="/profile/<%= blog.createdBy._id %>" class="text-decoration-none text-dark">
                    <strong class="ms-2">By <%= blog.createdBy.fullName %></strong>
                </a>
            </div>
        </div>
        
        <% if (locals.user && blog.createdBy._id.toString() === locals.user._id) { %>
            <div class="text-center mb-3">
                <a href="/blog/edit/<%= blog._id %>" class="btn btn-sm btn-warning">Edit</a>
                <form action="/blog/delete/<%= blog._id %>?_method=DELETE" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
            </div>
        <% } %>

        <div class="text-center">
            <img src="<%= blog.coverImageURL %>" class="img-fluid rounded w-75" alt="Blog Cover Image" />
        </div>
        
        <div class="mt-3 px-3"><%- blog.body %></div>
    </div>

    <div class="container mt-4">
        <h3>Comments (<%= comments.length %>)</h3>
        
        <% if (locals.user) { %>
        <form action="/blog/comment/<%= blog._id %>" method="post">
            <div class="mb-3">
                <input type="text" name="content" class="form-control" placeholder="Enter your comment" required>
            </div>
            <button class="btn btn-primary" type="submit">Add</button>
        </form>
        <% } %>

        <div class="mt-3">
            <% comments.forEach(comment => { %>
                <div class="card mb-2">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <img src="<%= comment.createdBy.ProfileImageURL %>" width="50px" height="50px" class="rounded-circle" alt="<%= comment.createdBy.fullName %>'s profile picture" />
                            <strong class="ms-2"><%= comment.createdBy.fullName %></strong>
                        </div>
                        <p class="card-text mt-2"><%= comment.content %></p>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <%- include('./partials/script') %>
</body>
</html>