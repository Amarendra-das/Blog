<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title><%= profileUser.fullName %>'s Profile</title>
</head>
<body>
    <%- include('./partials/nav') %>
    <div class="container mt-4">

        <div class="text-center">
            <img src="<%= profileUser.ProfileImageURL %>" width="150px" height="150px" class="rounded-circle" alt="<%= profileUser.fullName %>'s profile picture">
            <h1 class="mt-3"><%= profileUser.fullName %></h1>
            <p>Posts by this author:</p>
        </div>

        <hr>

        <div class="row mt-4">
            <% blogs.forEach(blog => { %>
                <div class="col-md-4 mb-3">
                    <div class="card" style="width: 18rem;">
                        <img src="<%= blog.coverImageURL %>" class="card-img-top" >
                        <div class="card-body">
                            <h5 class="card-title"><%= blog.title %></h5>
                            <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>

    </div>
    <%- include('./partials/script') %>
</body>
</html>